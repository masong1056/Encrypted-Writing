<Window x:Class="CaesarCipherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Encrypted Writing" 
        Height="330" 
        Width="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        x:Name="RootWindow">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="Encrypted Writing" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Enable Toggle -->
        <Border Grid.Row="1" 
                x:Name="ToggleBorder"
                CornerRadius="8" 
                Padding="15,10"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           x:Name="EnableText"
                           Text="Enable" 
                           FontSize="15" 
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>

                <CheckBox x:Name="EnableToggle" 
                          Grid.Column="2"
                          VerticalAlignment="Center"
                          Checked="EnableToggle_Changed"
                          Unchecked="EnableToggle_Changed"/>
            </Grid>
        </Border>

        <!-- Status Indicator -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="5,0,0,15">
            <Ellipse x:Name="StatusIndicator" 
                     Width="10" 
                     Height="10" 
                     Fill="Gray"
                     Margin="0,0,10,0"/>

            <TextBlock x:Name="StatusText" 
                       Text="Inactive" 
                       FontSize="13" 
                       Foreground="Gray"
                       VerticalAlignment="Center"/>
            <Border x:Name="ShortcutBorder"
                    CornerRadius="4" 
                    Padding="8,3"
                    >
                <TextBlock x:Name="ShortcutText"
                           Text="Ctrl+Shift+Alt+C" 
                           FontSize="11" 
                           FontFamily="Consolas"/>
            </Border>
        </StackPanel>

        <!-- Converter Button -->
        <Button Grid.Row="3" 
                x:Name="ConverterButton"
                Content="Text Encoder/Decoder" 
                Height="35"
                Background="#007ACC"
                Foreground="White"
                BorderThickness="0"
                FontSize="14"
                Margin="0,0,0,15"
                Click="OpenConverter_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- Warning Message -->
        <Border x:Name="WarningPanel" 
                Grid.Row="4" 
                Background="#FFF4E5" 
                CornerRadius="8" 
                Padding="15,10"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="⚠️ Admin Rights Required" 
                           FontWeight="SemiBold" 
                           FontSize="12"
                           Foreground="#E67E22"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Run as administrator for the encryption to work." 
                           FontSize="11"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>