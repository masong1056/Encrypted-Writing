<Window x:Class="CaesarCipherApp.ConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Caesar Cipher Converter" 
        Height="550" 
        Width="580"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        x:Name="RootConverterWindow">

    <Grid x:Name="MainGrid" Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="TitleText"
                       Text="Caesar Cipher Converter" 
                       FontSize="20" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Mode Selector -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <RadioButton x:Name="EncodeRadio" 
                         Content="Encode" 
                         IsChecked="True"
                         FontSize="14"
                         Padding="15,8"
                         Margin="0,0,10,0"/>
            <RadioButton x:Name="DecodeRadio" 
                         Content="Decode"
                         FontSize="14"
                         Padding="15,8"/>
        </StackPanel>

        <!-- Input Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock x:Name="InputLabel"
                       Text="Input:" 
                       FontSize="13" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBox x:Name="InputTextBox" 
                     Height="120"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="10"
                     FontSize="14"
                     BorderThickness="1">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Convert" 
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Click="Convert_Click"
                    Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Grid.Column="1" 
                    x:Name="ClearButton"
                    Content="Clear" 
                    Height="35"
                    Width="80"
                    BorderThickness="1"
                    FontSize="14"
                    Click="Clear_Click"
                    Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Grid.Column="2" 
                    x:Name="CopyButton"
                    Content="Copy" 
                    Height="35"
                    Width="80"
                    BorderThickness="1"
                    FontSize="14"
                    Click="Copy_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- Output Section -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock x:Name="OutputLabel"
                       Text="Output:" 
                       FontSize="13" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBox x:Name="OutputTextBox" 
                     Height="120"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="10"
                     FontSize="14"
                     BorderThickness="1"
                     IsReadOnly="True">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </StackPanel>
    </Grid>
</Window>